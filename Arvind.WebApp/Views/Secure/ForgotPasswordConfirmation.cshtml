@inject IConfiguration Configuration

<div class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <img src="~/images/@Configuration.GetSection("GlobalSettings")["LogoSm"]" alt="Logo" class="brand-image img-circle elevation-1" style="height:100px" /><br />
            <a href="~/">@Configuration.GetSection("GlobalSettings")["AppName-Short"]</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="card-header">
                    <div class="card-title">Forgot Password Confirmation</div>
                </div>
                <p class="login-box-msg">
                    <h3> The link has been sent, please check your email to reset your password.</h3>
                </p>
                <p class="mt-3 mb-1">
                    <a asp-controller="secure" asp-action="Login">Login</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>

    </div>
    <!-- /.login-box -->
</div>