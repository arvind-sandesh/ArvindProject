@inject IConfiguration Configuration
@model ForgotPasswordVM

<div class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <img src="~/images/@Configuration.GetSection("GlobalSettings")["LogoSm"]" alt="Logo" class="brand-image img-circle elevation-1" style="height:100px" /><br />
            <a href="~/">@Configuration.GetSection("GlobalSettings")["AppName-Short"]</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="card-header">
                    <div class="card-title">Re Confirmation of Email</div>
                </div>
                <form asp-action="ReConfirmEmail">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Re-Verify Email" class="btn btn-primary" />
                    </div>
                </form>
                <h3>@ViewBag.Msg</h3>

                <p class="mt-3 mb-1">
                    <a asp-controller="secure" asp-action="Login">Login</a>
                </p>


            </div>
            <!-- /.login-card-body -->
        </div>

    </div>
    <!-- /.login-box -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}